extends ../layout

block content
  .container
    if messages.success
      div.text-success
        for success in messages.success
          div= success.msg
    if messages.error
      div.text-danger
        for error in messages.error
          div= error.msg

    h4 Log In

    form(method='POST')
      label(for='email') Email
      input(type='email', name='email', id='email', placeholder='Email', autofocus)
      label(for='password') Password
      input(type='password', name='password', id='password', placeholder='Password')
      p
        a(href='/forgot')
          strong Forgot your password?
      button(type='submit') Log in

      hr

      a(href='/auth/facebook') Sign in with Facebook
      br
      a(href='/auth/twitter') Sign in with Twitter
      br
      a(href='/auth/google') Sign in with Google
      br

    p Don't have an account?
      a(href='/signup')
        strong  Sign up
